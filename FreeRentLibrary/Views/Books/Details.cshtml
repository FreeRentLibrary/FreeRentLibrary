@model FreeRentLibrary.Data.Entities.Book

@{
    ViewData["Title"] = "Details";
}
<style>
    .table td img {
        max-height: 100%;
        width: auto;
        display: block;
    }

    .table td {
        height: 100px;
        vertical-align: top;
    }
</style>

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Synopsis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Synopsis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NativeLanguage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NativeLanguage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
    </dl>
    
    <br /><label>Genres</label>
    <ul class="list-inline">
        @foreach (var genre in Model.Genres)
            {
                <li class="list-inline-item">
                    @Html.DisplayFor(modelItem => genre.Name)
                </li>
            }
    </ul>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Edition Name</th>
                <th>Publisher</th>
                <th>Release Data</th>
                <th>Book Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var edition in Model.BookEditions)
            {
                <tr>
                    <td>
                        <img src="@Url.Content(edition.ImageFullPath)" alt="Image" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => edition.EditionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => edition.BookPublisher.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => edition.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => edition.BookType.Name)
                    </td>
                    <td>
                        <a asp-action="BookEditionsDetails" asp-route-id="@edition.Id" class="btn btn-primary">View</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a asp-action="AddBookEdition" asp-route-id="@Model.Id">Add Edition</a>
</div>
