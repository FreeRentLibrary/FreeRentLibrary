@model FreeRentLibrary.Models.LibraryStockViewModel
@{
    ViewData["Title"] = "AddLibraryStock";
}

<h1>AddLibraryStock</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddLibraryStock" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LibraryId" />

            <div class="form-group">
                <label asp-for="BookEditionId" class="control-label"></label>
                <select asp-for="BookEditionId" asp-items="Model.BookEditions" class="form-control"></select>
                <a asp-controller="Books" asp-action="CreateBookEdition">Create a new book</a>
                <span asp-validation-for="BookEditionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.LibraryId">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}